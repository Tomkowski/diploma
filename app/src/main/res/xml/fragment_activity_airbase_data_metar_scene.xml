<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/fragment_map_scene_start">
        <Constraint
            android:id="@+id/metar_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/raw_metar" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/fragment_map_scene_end">
        <Constraint
            android:id="@id/raw_metar"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Transform android:translationY="-20dp" />
            <PropertySet android:alpha="0.0" />
        </Constraint>

        <Constraint
            android:id="@+id/metar_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/raw_metar" />
    </ConstraintSet>

    <Transition
        android:id="@+id/startToEnd"
        app:constraintSetEnd="@id/fragment_map_scene_end"
        app:constraintSetStart="@+id/fragment_map_scene_start"
        app:duration="1000">
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/metar_info"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/metar_info" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="50"
                app:motionTarget="@id/raw_metar" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
