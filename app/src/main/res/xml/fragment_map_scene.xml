<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        android:id="@+id/begin_state"
        motion:constraintSetEnd="@id/middle"
        motion:constraintSetStart="@id/start"
        motion:duration="600">
        <KeyFrameSet />
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@id/dummy_motion_listener" />
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/airport_title"
            motion:touchRegionId="@id/airport_title" />

    </Transition>

    <Transition
        android:id="@+id/swipe_state"
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/middle"
        motion:duration="1000">
        <KeyFrameSet />
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/airport_title"
            motion:touchRegionId="@id/airport_title" />
    </Transition>

    <Transition
        android:id="@+id/fold_state"
        motion:constraintSetEnd="@id/start"
        motion:constraintSetStart="@id/end"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@+id/airport_title"
            motion:touchRegionId="@id/airport_title" />
        <OnClick
            motion:clickAction="transitionToEnd"
            motion:targetId="@id/dummy_motion1_listener" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/airport_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:id="@+id/airport_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/airport_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/guideline"
            motion:layout_editor_absoluteY="865dp" />
        <Constraint
            android:id="@+id/meteo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/airport_title" />
    </ConstraintSet>
</MotionScene>