<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet />
        <OnSwipe
            motion:touchAnchorId="@+id/airport_title"
            motion:touchRegionId="@id/airport_title" />
            <OnClick motion:targetId="@+id/dummy_motion_listener" />
         </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/airport_title">
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/airport_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/guideline"
            motion:layout_editor_absoluteY="865dp"
            >
        </Constraint>
        <Constraint
            android:id="@+id/meteo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/airport_title" />
    </ConstraintSet>
</MotionScene>